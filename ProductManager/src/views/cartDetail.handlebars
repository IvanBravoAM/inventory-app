<body class="bg-gray-100">
  <div class="container mx-auto py-10">
    <h1 class="text-3xl font-semibold text-center mb-8">Shopping Cart</h1>
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-xl font-semibold mb-4">Your Cart</h2>
      <ul>
        {{#each cart.products}}
        <li class="flex justify-between items-center py-2">
          <div class="flex items-center space-x-4">
            <img src="{{this.pid.thumbnails}}" alt="Product Image" class="w-16 h-16 object-cover rounded">
            <div>
              <h3 class="font-semibold">{{this.pid.title}} </h3>
              <p class="text-gray-600">${{this.pid.price}} x{{this.quantity}}</p>
            </div>
          </div>
          <button class="text-red-600 hover:text-red-800">Remove</button>
        </li>
        {{/each}}
      </ul>
      <div class="mt-6">
        <p class="font-semibold text-lg">Total:  </p>
        <a href="/{{cart.id}}/purchase/" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Checkout</a>
      </div>
    </div>
  </div>
</body>